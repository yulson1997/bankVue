{
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "jsx": "preserve",
        "listFiles": true,
        "target": "es5",
        "lib": [
            "dom",
            "es7"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "mock/*": [
                "mock/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}